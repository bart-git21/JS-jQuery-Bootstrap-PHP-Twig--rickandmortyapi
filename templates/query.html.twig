{
  characters(
    page: 1, 
    filter: {
        {% if name %}
            name: "{{name}}",
        {% endif %}
        {% if status %}
            status: "{{status}}",
        {% endif %}
        {% if gender %}
            gender: "{{gender}}",
        {% endif %}
        {% if species %}
            species: "{{species}}",
        {% endif %}
    }) {
    info {
      count
    }
    results {
      name
      status
      species
      image
    }
  }
{% if locationIds %}
  locationsByIds(ids: [{{locationIds}}]) {
    id
    name
  }
{% endif %}
{% if locationIds %}
  episodesByIds(ids: [{{episodeIds}}]) {
    id
    name
  }
{% endif %}
}